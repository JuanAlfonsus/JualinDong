<%- include('./partial/userHeader') %>
    <div class="container">
        <% if (error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <p style="white-space: pre-line;"><%= error.split(',').join('\n') %></p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
      <h1 class="mb-3">Tambahkan Produk</h1>
      <form action="/user/addProduct/<%= user.id %>" method="post">
          <div class="mb-3">
            <label class="form-label">Nama Produk</label>
            <input type="text" class="form-control" name="name">
          </div>
          <div class="mb-3">
            <label class="form-label">Deskripsi Produk</label>
            <textarea class="form-control" name="description" rows="5"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Harga</label>
            <input type="number" class="form-control" name="price">
          </div>
          <div class="mb-3">
            <label class="form-label">Foto Produk</label>
            <input type="text" class="form-control" name="productImage" placeholder="https://i.imgur.com/ejM4NM6.gif">
          </div>
          <div class="mb-3">
            <label class="form-label">Stock</label>
            <input type="number" class="form-control" name="stock">
          </div>
          <div class="mb-3">
              <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                <% categories.forEach((e, i) => { %>
                    <input type="checkbox" class="btn-check" id="btncheck<%= i+1 %>" value="<%= e.id %>" name="CategoryId">
                    <label class="btn btn-outline-dark" for="btncheck<%= i+1 %>"><%= e.name %></label>
                <% }) %>
              </div>
          </div>
          <button class="btn btn-dark" type="submit">Submit</button>
      </form>
    </div>
<%- include('./partial/footer') %>